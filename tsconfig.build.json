{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*.ts",
    "domain/**/*.ts",
    "infra/**/*.ts",
    "ui/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests/**",
    "app/hardening.ts"   // <-- TS1343 회피(ESM 필요 파일은 빌드 대상 제외)
  ]
}