{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "han.kobong.contracts.release_notes.v1",
  "title": "Release Notes v1",
  "type": "object",
  "required": ["version", "date", "changes"],
  "properties": {
    "version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[A-Za-z0-9.]+)?$" },
    "date":    { "type": "string" },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string", "enum": ["feat", "fix", "chore", "docs", "refactor"] },
          "scope": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "breaking_changes": { "type": "array", "items": { "type": "string" } },
    "acknowledgements": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
