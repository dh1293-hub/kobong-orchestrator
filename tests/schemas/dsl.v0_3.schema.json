{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "dsl.v0_3.schema.json",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["step","actions"],
    "properties": {
      "step": { "type": "integer", "minimum": 1 },
      "explain": { "type": "string" },
      "actions": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "minProperties": 1,
          "maxProperties": 1,
          "patternProperties": {
            "^(LOCATE|FOCUS|PASTE|TYPE|PRESS|CLICK|DOUBLE|DRAG|SCROLL|WAIT|WAIT_FOR|SNAPSHOT|VERIFY|ASSERT|RETRY|NAVIGATE)$": {
              "type": ["object","string","number","boolean","null","array"]
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": true
  }
}
