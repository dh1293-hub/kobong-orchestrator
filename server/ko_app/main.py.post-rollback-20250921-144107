from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
from routers.monitoring import router as monitoring_router
from routers.github_mon import router as github_router
from routers.chat_mon import router as chat_router
from routers.sla_mon import router as sla_router

app = FastAPI(title="kobong-api", version="0.2")
app.add_middleware(CORSMiddleware,
    allow_origins=["http://localhost:5173","http://127.0.0.1:5173","*"],
    allow_methods=["*"], allow_headers=["*"])

app.include_router(monitoring_router, prefix="/api/mon", tags=["monitoring"])
app.include_router(github_router,     prefix="/api/mon/github", tags=["github"])
app.include_router(chat_router,       prefix="/api/mon", tags=["chat"])
app.include_router(sla_router,        prefix="/api/mon", tags=["sla"])

@app.get("/")
def root():
    return {"ok": True, "service": "kobong-api"}