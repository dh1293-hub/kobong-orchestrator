{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Action DSL v0.3 Response",
  "type": "object",
  "required": ["version","plan_id","outcome","steps"],
  "properties": {
    "version": { "const": "0.3" },
    "plan_id": { "type": "string" },
    "started_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": "string", "format": "date-time" },
    "duration_ms": { "type": "integer", "minimum": 0 },
    "outcome": { "enum": ["ok","partial","fail","cancelled"] },
    "steps": {
      "type": "array",
      "items": { "$ref": "#/$defs/StepResult" }
    }
  },
  "$defs": {
    "Status": { "enum": ["ok","fail","skipped","cancelled"] },
    "Error": {
      "type": "object",
      "required": ["code","message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "hint": { "type": "string" },
        "retries": { "type": "integer", "minimum": 0 },
        "details": { "type": "object" }
      },
      "additionalProperties": false
    },
    "Evidence": {
      "type": "object",
      "properties": {
        "locate": { "type": "object", "properties": { "strategy": { "type": "string" }, "score": { "type": "number" } }, "additionalProperties": true },
        "snapshots": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "ActionResult": {
      "type": "object",
      "required": ["op","status"],
      "properties": {
        "op": { "type": "string" },
        "id": { "type": "string" },
        "status": { "$ref": "#/$defs/Status" },
        "duration_ms": { "type": "integer", "minimum": 0 },
        "error": { "$ref": "#/$defs/Error" },
        "evidence": { "$ref": "#/$defs/Evidence" }
      },
      "additionalProperties": false
    },
    "StepResult": {
      "type": "object",
      "required": ["step","status","actions"],
      "properties": {
        "step": { "type": "integer" },
        "status": { "$ref": "#/$defs/Status" },
        "duration_ms": { "type": "integer", "minimum": 0 },
        "actions": { "type": "array", "items": { "$ref": "#/$defs/ActionResult" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
